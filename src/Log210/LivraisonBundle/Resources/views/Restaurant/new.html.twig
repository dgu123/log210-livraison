{% extends '::layout.html.twig' %}

{% block body -%}
    <h1>Ajouter restaurant</h1>

    {{ form_start(form,{'attr': {'onsubmit':'verifRestaurateur();'} } ) }}
        {{ form_errors(form) }}

        {{ form_row(form.name, { 'label': 'Nom' }) }}
        {{ form_row(form.description) }}
        {{ form_row(form.adresse) }}
        {{ form_row(form.phone) }}
        {{ form_row(form.restaurateur,{'attr': {'class': 'selectRestaurateur'} }) }}

        {{ form_row(form.submit, { 'label': 'Enregistrer' }) }}
    {{ form_end(form) }}

        
    <div>
        <a href="{{ path('restaurant') }}">
            Retour
        </a>
    </div>
{% endblock %}
