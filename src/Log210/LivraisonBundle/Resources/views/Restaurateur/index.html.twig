{% extends 'layout.html.twig' %}

{% block body -%}
    <h1>Restaurateur list</h1>
<div class="container">
  <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
            <td><a href="{{ path('restaurateur_show', { 'id': entity.id }) }}">{{ entity.name }}</a>
            <td>{{ entity.name }}</td>
            <td>{{ entity.description }}</td>
                  <td>
                    
                      <a class="glyphicon glyphicon-edit" href="{{ path('restaurateur_edit', { 'id': entity.id }) }}" rel="tooltip" title="Edit"></a>
                      <a class="glyphicon glyphicon-remove"
                          href="{{ path('restaurateur_unsafe_delete', { 'id': entity.id }) }}"
                          onclick="return confirm('Voulez-vous vraiment supprimer ce restaurant?')"
                          rel="tooltip"
                          title="Supprimer">
                      </a>
                  </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('restaurateur_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
