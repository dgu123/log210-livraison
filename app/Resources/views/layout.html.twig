<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>Livraison log210 - {% block title %}{% endblock %}</title>
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
        <script src="{{ asset('js/jquery.js') }}"></script>

        {% javascripts '%kernel.root_dir%/Resources/public/js/*' %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet" media="screen">

        {% stylesheets '%kernel.root_dir%/Resources/public/less/*' %}
            <link href="{{ asset_url }}" rel="stylesheet" media="screen">
        {% endstylesheets %}
        <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
        <script src="{{ path('fos_js_routing_js', {'callback': 'fos.Router.setData'}) }}"></script>
    </head>
    <body>
        <div id="document-wrapper">
            <div id="page-header">
                <nav class="navbar navbar-inverse navbar-static-top" role="navigation">
                    <div class="container">
                      {% set user = app.security.getToken().getUser() %}
                        {% if user != 'anon.' %}
                            {% if is_granted('ROLE_USER') %}
                              <a href="{{ path('restaurant_order')}}" class="navbar-brand">Restaurant</a>
                              {% endif %}
                            {% if is_granted('ROLE_RESTAURATEUR') %}
                              <a href="{{ path('restaurant')}}" class="navbar-brand">Mes Restaurants</a>
                              {% endif %}
                            {% if is_granted('ROLE_ENTREPRENEUR') %}
                              <a href="{{ path('restaurateur')}}" class="navbar-brand">Mes Restaurateur</a>
                            {% endif %}
                            {% if user == 'livreur' %}
                              <a href="#" class="navbar-brand">Mes Commandes</a>
                            {% endif %}

                            {% if user == 'client' %}
                              <a href="#" class="navbar-brand">Liste de Restaurant</a>
                            {% endif %}
                            <div class="navbar-right">
                              <a href="{{path('fos_user_profile_show')}}" class="navbar-brand">{{user}}</a>"
                              <a href="{{path('fos_user_security_logout')}}" class="btn btn-default navbar-btn"> {{'signout'|trans|capitalize}}</a>
                            </div>
                        {% else %}
                            <div class="navbar-right">
                              {{ render(controller('FOSUserBundle:Security:login'))}}
                            </div>
                        {% endif %}
                    </div>
                </nav>
            </div>
            <div id="page-body">
                <div class="container container-tall">
                    <div class="loading-container">
                        <div class="row">
                            <div class="col-xs-12">
                                {% block body %}{% endblock %}
                            </div>
                        </div>
                        <div id="loading-page" class="loading-box"><div class="loading loading-large"></div></div>
                    </div>
                </div>
            </div>
            <div id="page-footer">
                <div class="container">
                    <div class="row">

                    </div>
                </div>
            </div>
        </div>
        <div id="off-page">

        </div>
        <script src="{{ asset('js/bootstrap.js') }}"></script>
    </body>
</html>
